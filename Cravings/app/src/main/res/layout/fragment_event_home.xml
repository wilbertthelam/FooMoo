<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cravingscravings.cravings.fragments.EventHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFC107">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/event_home_event_craving"
                android:text="@string/event_home_event_craving"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:textSize="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/event_home_user_craving"
                android:text="@string/event_home_user_craving"
                android:background="#FFCDD2"
                android:layout_weight="1"
                android:gravity="center"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/event_home_change_craving_button"
                android:text="@string/event_home_change_craving_button"
                android:background="#F44336"
                android:textColor="#FFFFFF"
                android:layout_weight="0"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/event_home_craving_listing"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F44336">

    </LinearLayout>

    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FFC107">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_home_time"
            android:text="@string/event_home_time"
            android:textSize="22dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_home_location"
            android:text="@string/event_home_location"
            android:textSize="22dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</LinearLayout>
